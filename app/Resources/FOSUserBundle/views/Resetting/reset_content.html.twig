{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-signin text-center' } }) }}
    <div>
        <img class="center-block" src="{{ asset('assets/img/logo.png') }}" alt="logo">
        <h1 class="title text-center">{% trans %}login.title{% endtrans %}</h1>
    </div>

    <br/>

    {{ form_widget(form) }}
    <br/>
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
{{ form_end(form) }}
