{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}

    {% if submitted == true %}
        {% if emailNotFound %}
            {{ 'email.not.found'|trans }}
        {% else %}
            {{ 'Please check your email in order to reset your password'|trans }}
        {% endif %}
    {% else %}
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.send, { 'label': 'Reset password' }) }}
        {{ form_end(form) }}
    {% endif %}

    <br />
    <a href="{{ path('fos_user_security_login') }}">{{ 'back'|trans }}</a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}