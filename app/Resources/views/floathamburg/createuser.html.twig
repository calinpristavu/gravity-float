{% extends 'base.html.twig' %}

{% block body %}
    {% if submitted %}
        {{ 'user.successfully.created'|trans }} <br />
    {% else %}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.canCreateOnlineVouchers) }}
        {{ form_row(form.shop) }}
        {{ form_row(form.roles) }}

        {{ form_row(form.save, { 'label': 'Create' }) }}
        <a href="{{ path('user_management') }}">{{ 'back'|trans }}</a>
        {{ form_end(form) }}
    {% endif %}

{% endblock %}
